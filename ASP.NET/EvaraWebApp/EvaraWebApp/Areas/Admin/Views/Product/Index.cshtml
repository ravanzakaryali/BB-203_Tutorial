@model List<GetProductVM>
@{
    int count = 0;
}
<h1 class="h3 mb-2 text-gray-800">Products</h1>
<p class="mb-4">
    DataTables is a third party plugin that is used to generate the demo table below.
    For more information about DataTables, please visit the <a target="_blank"
                                                               href="https://datatables.net">official DataTables documentation</a>.
</p>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        <div>
            <a class="btn btn-success px-5" asp-action="Create">Create</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Colors</th>
                        <th>Price</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (GetProductVM item in Model)
                    {
                        <tr>
                            <td>@(++count)</td>
                            <td>
                                <img style="width: 100px" src="~/assets/imgs/shop/@item.ImageName" />
                            </td>
                            <td>@item.Name</td>
                            <td>
                                @foreach(string color in item.Colors)
                                {
                                    <p >@color</p>
                                }
                            </td>
                            <td>@item.Price</td>
                            <td class="d-flex">
                                <a asp-controller="Category" asp-action="Detail" asp-route-id="@item.Id"><button class="btn btn-info">Detail</button></a>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"><button class="btn btn-warning">Edit</button></a>
                                <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

